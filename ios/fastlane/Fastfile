platform :ios do
  desc "Push a new beta build to TestFlight"
  lane :beta do
    build_app(
      workspace:      "MyNewApp.xcworkspace",   # tu workspace real
      scheme:         "MyNewApp",                # tu scheme real
      clean:          true,
      export_method:  "app-store",

      # 1) Inyecta todo lo que Xcode necesita para la fase de archive
      xcargs: [
        "DEVELOPMENT_TEAM=#{ENV['APPLE_TEAM_ID']}",
        "CODE_SIGN_STYLE=Automatic",
        "PRODUCT_BUNDLE_IDENTIFIER=#{ENV['APP_IDENTIFIER']}",
        "PROVISIONING_PROFILE_SPECIFIER=OcrProductos_Release_Profile"
      ].join(" "),

      # 2) Pasa -allowProvisioningUpdates a la fase de export
      export_xcargs: "-allowProvisioningUpdates",

      # 3) Y controla el export .ipa como antes
      export_team_id: ENV["APPLE_TEAM_ID"],
      export_options: {
        provisioningProfiles: {
          ENV["APP_IDENTIFIER"] => "OcrProductos_Release_Profile"
        }
      }
    )
    upload_to_testflight
  end
end
