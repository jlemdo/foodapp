source 'https://cdn.cocoapods.org/'
source 'https://github.com/CocoaPods/Specs.git'

platform :ios, '16.0'

require_relative '../node_modules/react-native/scripts/react_native_pods'
prepare_react_native_project!

# Desactiva Fabric & TurboModules
ENV['RCT_NEW_ARCH_ENABLED'] = '0'

# Soporte opcional para frameworks
linkage = ENV['USE_FRAMEWORKS']
use_frameworks! :linkage => linkage.to_sym if linkage

target 'MyNewApp' do
  config = use_native_modules!

  # Usar react-native-maps desde su repo oficial y evitar el link automático
  pod 'react-native-maps',
      git: 'https://github.com/react-native-maps/react-native-maps.git',
      tag: '1.23.7'

  use_react_native!(
    path: config[:reactNativePath],
    app_path: "#{Pod::Config.instance.installation_root}/..",
    new_arch_enabled: false,
    fabric_enabled: false,
    exclude: ['react-native-maps']  # ← evita que use_native_modules! enlace la versión local
  )

  post_install do |installer|
    react_native_post_install(
      installer,
      config[:reactNativePath],
      mac_catalyst_enabled: false
    )
    if installer.pods_project.targets.map(&:name).include?('RCT-Folly')
      __apply_Xcode_12_5_M1_post_install_workaround(installer)
    end
  end
end
