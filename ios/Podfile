# ios/Podfile
source 'https://github.com/CocoaPods/Specs.git'
platform :ios, '16.0'

# Carga directa del script de React Native
require_relative '../node_modules/react-native/scripts/react_native_pods'
prepare_react_native_project!

linkage = ENV['USE_FRAMEWORKS']
if linkage
  Pod::UI.puts "Configuring Pod with #{linkage}ally linked Frameworks".green
  use_frameworks! :linkage => linkage.to_sym
end

target 'MyNewApp' do
  config = use_native_modules!

  # Instala React Native Maps directamente desde node_modules
  pod 'react-native-maps', path: '../node_modules/react-native-maps'
  pod 'react-native-maps-generated', :path => './build/generated/ios'


  # El resto de mÃ³dulos de React Native
  use_react_native!(
    :path => config[:reactNativePath],
    :app_path => "#{Pod::Config.instance.installation_root}/.."
  )

  post_install do |installer|
    react_native_post_install(
      installer,
      config[:reactNativePath],
      :mac_catalyst_enabled => false
    )
    # Workaround Xcode 12.5 / Apple Silicon
    __apply_Xcode_12_5_M1_post_install_workaround(installer) if installer.pods_project.targets.map(&:name).include?("RCT-Folly")
  end
end
